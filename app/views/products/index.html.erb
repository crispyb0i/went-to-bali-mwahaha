<h3>Products</h3>
<%= link_to "Add a product", new_product_path%>
<div class="row">
  <div class="section">
    <% @products.each do |product|%>
      <div class="col s4">
        <h4><%= product.name %></h4>
        <p><%= number_to_currency product.price %></p>
          <%= link_to "See more details...", product_path(product), remote: true %>
          <%= form_for @order_item, remote:true do |f| %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!", id: "add_to_cart" %>
            <span class="waves-effect waves-light btn"><%= f.submit "Add to cart", remote: true %></span>
          <% end %>
      </div>
    <% end %>
  </div>
</div>
